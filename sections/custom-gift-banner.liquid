{% comment %}
  Custom Banner section (all red-boxed texts editable + animated buttons)
  No Dawn components used.
{% endcomment %}

{{ 'gift-guide.css' | asset_url | stylesheet_tag }}
<script src="{{ 'gift-guide.js' | asset_url }}" defer="defer"></script>

<section class="gg-announcement">
  <div class="gg-container gg-announcement__bar">
   <img src="&lbrace;&lbrace; 'logo.png' | asset_url &rbrace;&rbrace;" alt="Shop logo">
    <div class="gg-announcement__msg">{{ section.settings.announce_text }}</div>
    <div class="gg-announcement__cta">
      <a class="gg-btn" href="{{ section.settings.announce_button_url }}">
        {{ section.settings.announce_button_label }}
        <span class="gg-btn__arrow">â†’</span>
      </a>
    </div>
  </div>
</section>

<section class="gg-hero">
 
  

  
</section>

{% schema %}
{
  "name": "Gift Guide Banner",
  "settings": [
    { "type": "text", "id": "brand_text", "label": "Brand (top-left)", "default": "TISSO VISON" },
    { "type": "text", "id": "announce_text", "label": "Top message", "default": "Find the ideal gift for your loved ones." },
    { "type": "text", "id": "announce_button_label", "label": "Top button label", "default": "CHOOSE GIFT" },
    { "type": "url",  "id": "announce_button_url",   "label": "Top button link" },

    { "type": "image_picker", "id": "bg_image", "label": "Hero background image" },
    { "type": "text", "id": "heading", "label": "Hero heading", "default": "The Gift Guide" },
    { "type": "textarea", "id": "subtext", "label": "Hero paragraph", "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season." },
    { "type": "text", "id": "shop_button_label", "label": "Hero button label", "default": "SHOP NOW" },
    { "type": "url", "id": "shop_button_url", "label": "Hero button link" },
    { "type": "text", "id": "strip_text", "label": "Bottom strip text", "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL" }
  ],
  "blocks": [],
  "presets": [{ "name": "Gift Guide Banner (Custom)" }]
}
{% endschema %}
