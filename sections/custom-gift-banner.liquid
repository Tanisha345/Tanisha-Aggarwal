{% comment %}
  Gift Guide Banner Section
  - Custom top bar, banner with heading/subtext/button, bottom strip
  - All texts and buttons editable
  - No Dawn components used
{% endcomment %}

{{ 'gift-guide-banner.css' | asset_url | stylesheet_tag }}
<script src="{{ 'gift-guide.js' | asset_url }}" defer="defer"></script>

<!-- ================= Top Bar ================= -->
<section class="gg-announcement">
  <div class="gg-announcement__bar">
    <img src="{{ 'icon-hamburger.svg' | asset_url }}" height="10px" width="18px">
    <img 
      src="{{ 'tissovison.png' | asset_url }}" 
      alt="Shop logo" 
      width="150" 
      height="20"
    >
    <div class="gg-announcement__msg">
      {{ section.settings.announce_text }}
    </div>
    <a href="{{ section.settings.announce_button_url }}" class="gg-btn">
      {{ section.settings.announce_button_label }} →
    </a>
  </div>
</section>

<!-- ================= Banner Section ================= -->
<img 
  src="{{ 'Frame1.png' | asset_url }}" 
  alt="banner" 
  class="gg-banner-bg"
  width="100%"
  height="100%"
>

<div class="banner-section">
  <!-- Text Area -->
  <div class="banner-section-textarea">
   
    <div class="heading">{{ section.settings.heading }}</div>
    <div class="subtext-section">
    <span class="subheading">{{ section.settings.subtext1 }}</span>
    <span class="subheading subtext2">{{ section.settings.subtext2 }}</span>
    </div>
    <a href="{{ section.settings.shop_button_url }}" class="gg-shop-btn">
      {{ section.settings.shop_button_label }} →
    </a>
  </div>

  <!-- Image Area -->
  <div class="banner-section-imagearea">
    <img 
      src="{{ 'Frame2.png' | asset_url }}" 
      alt="banner side image" 
      width="100%" 
      height="100%"
    >
  </div>
</div>

<!-- ================= Bottom Strip ================= -->
<section class="gg-announcement">
  <div class="gg-announcement__bar gg-bottom-bar">
    <div class="gg-announcement__msg">
      {{ section.settings.strip_text }}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Gift Guide Banner",
  "settings": [
    { "type": "text", "id": "brand_text", "label": "Brand (top-left)", "default": "TISSO VISON" },
    { "type": "text", "id": "announce_text", "label": "Top message", "default": "Find the ideal gift for your loved ones." },
    { "type": "text", "id": "announce_button_label", "label": "Top button label", "default": "CHOOSE GIFT" },
    { "type": "url", "id": "announce_button_url", "label": "Top button link" },

    { "type": "image_picker", "id": "bg_image", "label": "Hero background image" },
    { "type": "text", "id": "heading", "label": "Hero heading", "default": "The Gift Guide" },
    { "type": "textarea", "id": "subtext1", "label": "Hero paragraph", "default": "Discover Joy: Your Ultimate Holiday Gift Destination." },
    { "type": "textarea", "id": "subtext2", "label": "Hero paragraph", "default": "Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season." },
    { "type": "text", "id": "shop_button_label", "label": "Hero button label", "default": "SHOP NOW" },
    { "type": "url", "id": "shop_button_url", "label": "Hero button link" },
    { "type": "text", "id": "strip_text", "label": "Bottom strip text", "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL" }
  ],
  "blocks": [],
  "presets": [{ "name": "Gift Guide Banner (Custom)" }]
}
{% endschema %}
